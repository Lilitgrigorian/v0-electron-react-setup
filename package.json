{
  "name": "double-copy-paste",
  "version": "1.0.0",
  "description": "A lightweight macOS utility app for managing two independent clipboard buffers",
  "keywords": [
    "clipboard",
    "utility",
    "macos",
    "productivity"
  ],
  "license": "MIT",
  "author": "Your Name",
  "type": "module",
  "main": "dist/main/main.js",

  "scripts": {
    "build": "tsc",
    "dev": "tsc && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir",
    "start": "npm run build && electron ."
  },
  "dependencies": {
    "@emotion/is-prop-valid": "latest",
    "@vercel/analytics": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "electron-is-dev": "3.0.1",
    "electron-log": "latest",
    "electron-store": "latest",
    "framer-motion": "latest",
    "lucide-react": "^0.454.0",
    "next": "16.0.1",
    "next-themes": "latest",
    "node-fetch": "3.3.2",
    "path": "latest",
    "react": "^18",
    "react-dom": "18",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "latest",
    "url": "latest",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5",
    "tailwindcss": "4.1.17",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.doublecopy.paste",
    "productName": "Double Copy Paste",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true,
      "LSUIElement": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  }
}